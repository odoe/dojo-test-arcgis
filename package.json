{
  "name": "dojo-cli",
  "version": "1.0.0",
  "scripts": {
    "dev": "dojo build --mode dev --watch --serve --unhandled-rejections=strict",
    "build": "dojo build --mode dist",
    "build:dev": "dojo build --mode dev",
    "test": "dojo test",
    "test:unit": "dojo build --mode unit && dojo test --unit --config local",
    "test:functional": "dojo build --mode functional && dojo test --functional --config local",
    "test:all": "dojo build --mode unit && dojo build --mode functional && dojo test --all --config local",
    "postinstall": "ncp ./node_modules/@arcgis/core/assets ./src/assets"
  },
  "dependencies": {
    "@arcgis/core": "^4.17.0-next.20200921",
    "@dojo/framework": "~7.0.0",
    "@dojo/widgets": "~7.0.0",
    "cldr-data": "36.0.0",
    "globalize": "1.5.0"
  },
  "devDependencies": {
    "@dojo/cli": "~7.0.0",
    "@dojo/cli-build-app": "~7.0.0",
    "@dojo/cli-test-intern": "~7.0.0",
    "@types/node": "~9.6.5",
    "moment-locales-webpack-plugin": "^1.2.0",
    "ncp": "^2.0.0",
    "typescript": "~3.4.5",
    "webpack-cli": "^3.3.12"
  }
}
